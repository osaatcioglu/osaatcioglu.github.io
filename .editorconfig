# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = tab
indent_size = 2

[*.py]
indent_style = tab
indent_size = 2

[*.js]
indent_style = tab
indent_size = 2

[lib/**.js]
indent_style = tab
indent_size = 2

[*.json]
indent_style = tab
indent_size = 2

[{package.json,.travis.yml}]
indent_style = space
indent_size = 2
